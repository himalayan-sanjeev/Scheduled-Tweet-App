<h1> Forgot Your Password? </h1>

<%= form_with url: password_reset_path do |form| %>
<div class="mb-4">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder: "example@example.com" %>
</div>
<div class="mb-4">
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
</div>
<% end %>