<%= form_with model: tweet do |t| %>

    <%= render "shared/form_errors", form: t %>


    <div class="mb-3">
        <%= t.label :twitter_account_id %>
        <%= t.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, { class: "form-control" } %>
        <%= link_to "Connect your Twitter Account", "/auth/twitter", class: "btn btn-primary" %>
    </div>
     <div class="mb-3">
        <%= t.label :body %>
        <%= t.text_area :body, class: "form-control"  %>
    </div>
     <div class="mb-3">
        <%= t.label :publish_at %>
        <div class="form-control">
            <%= t.datetime_select :publish_at %>
        </div>
    </div>
    <%= t.button "Schedule", class:"btn btn-primary" %>

    <% if t.object.persisted? %>
    <%= button_to "Delete", t.object, method: :delete, data:{ Confirm:"Are you sure?"}, class: "btn btn-outline-danger" %>
    <% end %>
<% end %>
